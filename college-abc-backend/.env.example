APP_NAME="Gestion Scolaire Burkina Faso"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

# Informations de l'établissement
SCHOOL_NAME="Collège Privé Wend-Manegda"
SCHOOL_ADDRESS="Ouagadougou, Burkina Faso"
SCHOOL_PHONE="+226 00 00 00 00"
SCHOOL_EMAIL="contact@wend-manegda.bf"

APP_LOCALE=fr
APP_FALLBACK_LOCALE=fr
APP_FAKER_LOCALE=fr_BF

APP_MAINTENANCE_DRIVER=file

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ============================================================================
# CONFIGURATION MULTI-BASES DE DONNÉES
# ============================================================================
# 4 bases distinctes selon le cahier des charges:
# - school_core: Base centrale (users, roles, audit)
# - school_maternelle_primaire: Élèves maternelle/primaire
# - school_college: Élèves collège
# - school_lycee: Élèves lycée
# ============================================================================

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=

# Base Centrale (par défaut)
DB_DATABASE=school_core

# Base Maternelle/Primaire
DB_DATABASE_CORE=school_core
DB_DATABASE_MP=school_maternelle_primaire

# Base Collège
DB_DATABASE_COLLEGE=school_college

# Base Lycée
DB_DATABASE_LYCEE=school_lycee

# ============================================================================
# SESSION & CACHE
# ============================================================================
SESSION_DRIVER=database
SESSION_LIFETIME=30
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database

# ============================================================================
# REDIS (optionnel - pour production)
# ============================================================================
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ============================================================================
# MAIL (pour notifications)
# ============================================================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@ecole.bf"
MAIL_FROM_NAME="${APP_NAME}"

# ============================================================================
# SMS (pour notifications parents)
# ============================================================================
SMS_DRIVER=orange_bf
SMS_API_KEY=
SMS_API_SECRET=
SMS_SENDER_NAME="ECOLE"

# ============================================================================
# SERVICES CLOUD (optionnel)
# ============================================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=eu-west-3
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ============================================================================
# SÉCURITÉ
# ============================================================================
# Timeout session: 30 minutes (cahier des charges)
# 2FA obligatoire pour: direction, comptabilite

# Google 2FA (optionnel)
GOOGLE_2FA_SECRET_KEY=

# Clé de chiffrement des données sensibles
ENCRYPTION_KEY=

# ============================================================================
# FRONTEND
# ============================================================================
FRONTEND_URL=http://localhost:4200
SANCTUM_STATEFUL_DOMAINS=localhost:4200

VITE_APP_NAME="${APP_NAME}"
VITE_API_URL=http://localhost:8000/api

# ============================================================================
# LIMITES
# ============================================================================
# Seuils classes (configurables)
CLASS_MIN_THRESHOLD=15
CLASS_MAX_THRESHOLD_MATERNELLE=30
CLASS_MAX_THRESHOLD_PRIMAIRE=40
CLASS_MAX_THRESHOLD_COLLEGE=50
CLASS_MAX_THRESHOLD_LYCEE=45

# Alertes absences
ABSENCE_ALERT_THRESHOLD=3
ABSENCE_CONVOCATION_THRESHOLD=5
ABSENCE_DIRECTION_THRESHOLD_PERCENT=10

# Finance
PAYMENT_BLOCKING_THRESHOLD=50000
DISCOUNT_COMPTANT_PERCENT=5
